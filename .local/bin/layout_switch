#!/bin/bash
# switch between layouts

if [[ -n "$1" ]]; then
    setxkbmap $1
else
    layout=$(setxkbmap -query | awk 'NR==3{print $2}')
    case $layout in
        cz)
                setxkbmap us
            ;;
        us)
                setxkbmap cz
            ;;
        *)
                setxkbmap cz
            ;;
    esac
fi
